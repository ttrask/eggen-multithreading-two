@model IEnumerable<AppStats.Models.DropFile>

@{
    ViewBag.Title = "Uploaded Files";
}

<h2>Uploaded Files</h2>

@Html.ActionLink("Upload a new File", "ImportData", "Import", null, new { @class="button"} )

<table>
    <tr>
        <th style="padding-left:2px; padding-right:2px">
            @Html.DisplayNameFor(model => model.Filename)
        </th>
        <th style="padding-left:2px; padding-right:2px">
            @Html.DisplayNameFor(model => model.Environment)
        </th>
        <th style="padding-left:2px; padding-right:2px">
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Filename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Environment.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DropFileId }) |
            @Html.ActionLink("Details", "Details", new { id = item.DropFileId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.DropFileId }) |
                @Html.ActionLink("Download", "Download", new { id = item.DropFileId })

            </td>
        </tr>
    }

</table>
