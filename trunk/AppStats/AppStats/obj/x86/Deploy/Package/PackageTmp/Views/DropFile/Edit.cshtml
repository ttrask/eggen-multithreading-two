@model AppStats.Models.DropFile

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>DropFile</legend>

        @Html.HiddenFor(model => model.DropFileId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Filename)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Filename)
            @Html.ValidationMessageFor(model => model.Filename)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Environment)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.EnvironmentId, AppStats.Models.Record.Environments)
            @Html.ValidationMessageFor(model => model.Environment)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Language)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.LanguageId, AppStats.Models.Record.Languages)
            @Html.ValidationMessageFor(model => model.Environment)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
